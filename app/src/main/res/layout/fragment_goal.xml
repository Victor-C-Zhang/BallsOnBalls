<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GoalFragment">

    <View
        android:id="@+id/grid"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/three_by_three_grid"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.655" />

    <com.example.numbergame.customViews.NumberView
        android:id="@+id/buttonZero"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/numbercircle"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/colorText"
        android:textSize="40sp"
        app:ghost="@+id/ghostZero"
        app:layout_constraintBottom_toTopOf="@+id/buttonThree"
        app:layout_constraintEnd_toStartOf="@+id/buttonOne" />

    <com.example.numbergame.customViews.NumberView
        android:id="@+id/buttonOne"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/numbercircle"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="2"
        android:textColor="@color/colorText"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonFour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <com.example.numbergame.customViews.NumberView
        android:id="@+id/buttonTwo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/numbercircle"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="3"
        android:textColor="@color/colorText"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonFive"
        app:layout_constraintStart_toEndOf="@+id/buttonOne" />

    <com.example.numbergame.customViews.NumberView
        android:id="@+id/buttonThree"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/numbercircle"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="4"
        android:textColor="@color/colorText"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/grid"
        app:layout_constraintEnd_toStartOf="@+id/buttonFour"
        app:layout_constraintTop_toTopOf="@+id/grid" />

    <com.example.numbergame.customViews.NumberView
        android:id="@+id/buttonFour"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/numbercircle"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="5"
        android:textColor="@color/colorText"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/grid"
        app:layout_constraintEnd_toEndOf="@+id/grid"
        app:layout_constraintStart_toStartOf="@+id/grid"
        app:layout_constraintTop_toTopOf="@+id/grid" />

    <com.example.numbergame.customViews.NumberView
        android:id="@+id/buttonFive"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/numbercircle"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="6"
        android:textColor="@color/colorText"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/grid"
        app:layout_constraintStart_toEndOf="@+id/buttonFour"
        app:layout_constraintTop_toTopOf="@+id/grid" />

    <com.example.numbergame.customViews.NumberView
        android:id="@+id/buttonSix"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/numbercircle"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="7"
        android:textColor="@color/colorText"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@+id/buttonSeven"
        app:layout_constraintTop_toBottomOf="@+id/buttonThree" />

    <com.example.numbergame.customViews.NumberView
        android:id="@+id/buttonSeven"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/numbercircle"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="8"
        android:textColor="@color/colorText"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonFour" />

    <com.example.numbergame.customViews.NumberView
        android:id="@+id/buttonEight"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/numbercircle"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="9"
        android:textColor="@color/colorText"
        android:textSize="40sp"
        app:layout_constraintStart_toEndOf="@+id/buttonSeven"
        app:layout_constraintTop_toBottomOf="@+id/buttonFive" />

</android.support.constraint.ConstraintLayout>